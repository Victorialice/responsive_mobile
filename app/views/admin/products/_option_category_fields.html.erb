<fieldset>
    <legend></legend>
    <div class="form-group">
    <label class="col-sm-2 control-label col-sm-offset-1"> 选件分类名称 </label>
    <div class="col-sm-6">
      <%= f.text_field :name, class: "string required form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label col-sm-offset-1"> 备注 </label>
    <div class="col-sm-6">
      <%= f.text_field :note, class: "string required form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label col-sm-offset-1"> 选件编号  </label>
    <div class="col-sm-6">
      <%= f.text_field :option_sku_collection, class: "string required form-control", :placeholder => "适用选件型号,如有多个,请用半角逗号分隔" %>
    </div>
  </div>
		<p class="delete_link"><%= delete_image f %></p>
</fieldset>
