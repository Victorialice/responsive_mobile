<%= form_for [:admin, @industry], html: {class: "form-horizontal"} do |f| %>
  <div class="box-body">
    <%= render 'admin/shared/error', model: @industry %>
    <fieldset>
      <div class="form-inputs">
        <div class="form-group string requirede">
          <label class="string required col-sm-2 control-label">
             行业名称<abbr title="required">*</abbr>
          </label>
          <div class="col-sm-4">
            <%= f.text_field :name, class: "string required form-control" %>
          </div>
        </div>
      </div>
      <div class="form-inputs">
        <div class="form-group string requirede">
          <label class="string required col-sm-2 control-label">
            编号<abbr title="required">*</abbr>
          </label>
          <div class="col-sm-4">
            <%= f.text_field :number, class: "string required form-control" %>
          </div>
        </div>
      </div>
      <div class="form-inputs">
        <div class="form-group string requirede">
          <label class="col-sm-2 control-label"> 备注 </label>
          <div class="col-sm-4">
            <%= f.text_field :note, class: "string required form-control" %>
          </div>
        </div>
      </div>
      </div>

      <div class="form-inputs">
        <div class="form-group">
          <label class="col-sm-2 control-label"> 所属业界 </label>
          <div class="col-sm-4">
            <%= f.select :parent_id, options_for_select(Industry.roots.collect do |i| [i.name, i.id] end.unshift(["一级行业", '']), @industry.parent_id), {}, class: "string required form-control" %>
          </div>
        </div>
      </div>

    </fieldset>
    <div class="form-group">
      <div class="col-sm-4 col-sm-offset-2">
        <%= f.button '保存', class: 'btn btn-primary' %>
        <%= link_to '取消', [:admin, :industries], class: 'btn btn-warning' %>
      </div>
    </div>
  </div>
<% end %>
