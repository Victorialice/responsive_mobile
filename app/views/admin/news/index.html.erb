<section class="content-header">
  <h1> 新闻
    <small>控制板</small>
  </h1>
</section>
<section class="content">
  <div class="box box-primary">
    <div class="box-header">
      <h3 class="box-title">新闻列表</h3>
      <div class="col-sm-4 hidden-xs margin-top-10">
        <%= link_to '新建',[:new,:admin,:news],  class: 'btn btn-s-md btn-primary btn-flat', id: 'color-white' %>
      </div>
    </div>
    <div class="box-body table-responsive no-padding">                                                     
      <table class="table table-hover"> 
        <tbody>                                                                                            
          <tr>                                                                                             
            <th>ID</th>
            <th>标题</th>
						<th>分类</th>
            <th>公开时间</th>
            <th></th>
          </tr>                                                                                            
          <%= render @newss  %>
        </tbody>                                                                                           
      </table>                                                                                             
    </div>                                                                                                 
    <div class="box-footer clearfix">                                                                      
      <div class="row">
        <div class="col-sm-10 text-center text-center-xs">
          <%= paginate @newss %> 
        </div>                                                                                             
      </div>                                                                                               
    </div>    
  </div>    
</section>
