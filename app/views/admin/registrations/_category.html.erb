<tr>                                                                                             
  <th> 
    <%= category.name %> 
  </th>
  <th> 
    <%= category.position %> 
  </th>
  <th><%= category.parent_id.present? ? category.parent.try(:name) : "" %></th>
  <th><%= image_tag category.image.url(:w50h50) if category.image?%></th>
  <th><%= category.note %></th>
  <th><%= link_to "编辑", [:edit, :admin, category], class: "btn btn-primary" %> <%= link_to "删除", [:admin, category], method: :delete, class: "btn btn-primary", data: { confirm: "确认删除吗?" } %></th>
</tr>                                                                                            
