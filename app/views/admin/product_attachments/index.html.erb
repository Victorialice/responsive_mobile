<section class="content-header">
  <h1> PDF文件
    <small>控制板</small>
  </h1>
</section>
<section class="content">
  <div class="box box-primary">
    <div class="box-header">
      <h3 class="box-title">PDF文件列表</h3>
			<div class="col-sm-4 hidden-xs margin-top-10">
        <%= link_to '新建',[:new,:admin,:product_attachment],  class: 'btn btn-s-md btn-primary btn-flat', id: 'color-white' %>
      </div>
    </div>
    <div class="box-body table-responsive no-padding">                                                     
      <table class="table table-hover"> 
        <tbody>                                                                                            
          <tr>                                                                                             
            <th>名称</th>
            <th>所属分类</th>
            <th>文件名称</th>
            <th>文件大小</th>
						<th>上传时间</th>
						<th></th>
          </tr>                                                                                            
          <%= render @product_attachments  %>
        </tbody>                                                                                           
      </table>                                                                                             
    </div>                                                                                                 
    <div class="box-footer clearfix">                                                                      
      <div class="row">
        <div class="col-sm-10 text-center text-center-xs">
          <%= paginate @product_attachments %> 
        </div>                                                                                             
      </div>                                                                                               
    </div>    
  </div>    
</section>
