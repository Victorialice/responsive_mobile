<%= form_for [:admin, @utility], html: {class: "form-horizontal"} do |f| %>
<div class="box-body">
  <%= render 'admin/shared/error', model: @utility %>
  <fieldset>
    <div class="form-inputs">
      <div class="form-group string requirede">
        <label class="string required col-sm-2 control-label">
          标题<abbr title="required">*</abbr> 
        </label>
        <div class="col-sm-4">
          <%= f.text_field :title, class: "string required form-control" %>
        </div>
      </div>
    </div>
    <div class="form-inputs">
      <div class="form-group string requirede">
        <label class="string required col-sm-2 control-label">
          描述<abbr title="required">*</abbr>
        </label>
        <div class="col-sm-4">
          <%= f.text_field :description, class: "string required form-control" %>
        </div>
      </div>
    </div>
    <div class="form-inputs">
      <div class="form-group string requirede">
        <label class="string col-sm-2 control-label"> 
          链接<abbr title="required">*</abbr>
        </label>
        <div class="col-sm-4">
          <%= f.text_field :link, class: "string required form-control" %>
        </div>
      </div>
    </div>
		
		<div class="form-inputs">
      <div class="form-group string">
        <label class="string col-sm-2 control-label"> 适用产品
        </label>
        <br/>
        <br/>
        <div class="indent">
					<% Product.is_main_body.collect do |product| %>
          <div class="col-sm-3">
						<%= check_box_tag "utility[product_ids][]", product.id, @utility.products.include?(product), id: "product_#{product.sku}" %>
						<label for=<%= "product_#{product.sku} "%> class="checkbox-industry"><%= "#{product.sku}" %></label>
					</div>
					<% end %>
				</div>
      </div>
    </div>


  </fieldset>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
      <%= f.button '保存', class: 'btn btn-primary' %>
      <%= link_to '取消', [:admin, :utilities], class: 'btn btn-warning' %>
    </div>
  </div>
</div>
<% end %>
