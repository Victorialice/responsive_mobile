<%= form_for [:admin, @option], html: {class: "form-horizontal", multipart: true} do |f| %>
<div class="box-body">
  <%= render 'admin/shared/error', model: @option %>
  <fieldset>
    <div class="form-inputs">
      <div class="form-group string requirede">
        <label class="string required col-sm-2 control-label">
          <abbr title="required">*</abbr> 选件编号
        </label>
        <div class="col-sm-4">
          <%= f.text_field :sku, class: "string required form-control" %>
        </div>
      </div>
    </div>
    <div class="form-inputs">
      <div class="form-group string requirede">
        <label class="string required col-sm-2 control-label">
          <abbr title="required">*</abbr>标题
        </label>
        <div class="col-sm-4">
          <%= f.text_field :title, class: "string required form-control" %>
        </div>
      </div>
    </div>
		
    <div class="form-inputs">
      <div class="form-group string requirede">
        <label class="col-sm-2 control-label"> 描述 </label>
        <div class="col-sm-4">
          <%= f.text_field :description, class: "string required form-control" %>
        </div>
      </div>
    </div>

		<div class="form-inputs">
      <div class="form-group string requirede">
        <label class="col-sm-2 control-label"> 图片 </label>
				<%= image_tag(@option.avatar.thumb.url) if @option.avatar? %>
        <div class="col-sm-4">
          <%= f.file_field :avatar, class: "string required form-control" %>
        </div>
      </div>
    </div>

	</fieldset>
	
	<div class="form-group">
		<div class="col-sm-4 col-sm-offset-2">
			<%= f.button '保存', class: 'btn btn-primary' %>
			<%= link_to '取消', [:admin, :options], class: 'btn btn-warning' %>
		</div>
	</div>
</div>
<% end %>
