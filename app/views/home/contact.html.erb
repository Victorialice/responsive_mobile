		<script language="javascript">

function check()

{

  var username = document.getElementById('contact_username').value;

  if (username==''){

    alert('请输入姓名');

    document.getElementById('contact_username').focus();

    return false;

  }


  var company_name = document.getElementById('contact_company_name').value;
  if (company_name =='')
  {
    alert('公司名请输入');
    document.getElementById('contact_company_name').focus();
    return false;
}

  var contact_department = document.getElementById('contact_department').value;
  if (contact_department =='')
  {
    alert('部门请输入');
    document.getElementById('contact_department').focus();
    return false;
  }

  var contact_address = document.getElementById('contact_address').value;
  if (contact_address =='')
  {
    alert('地址请输入');
    document.getElementById('contact_address').focus();
    return false;
}

  var contact_postcode = document.getElementById('contact_postcode').value;
  if (contact_postcode =='')
  {
    alert('邮编请输入');
    document.getElementById('contact_postcode').focus();
    return false;
}
  var contact_tel = document.getElementById('contact_tel').value;
  if (contact_tel =='')
  {
    alert('电话请输入');
    document.getElementById('contact_tel').focus();
    return false;
}
  var contact_fax = document.getElementById('contact_fax').value;
  if (contact_fax =='')
  {
    alert('传真请输入');
    document.getElementById('contact_fax').focus();
    return false;
}

  var email = document.getElementById('contact_email').value;
  if (!/\w{1,}[@][\w\-]{1,}([.]([\w\-]{1,})){1,3}$/.test(email)){
    alert('Email格式不合法');
    document.getElementById('contact_email').focus();
    return false;
  }

  var contact_email = document.getElementById('contact_email').value;
  if (contact_email =='')
  {
    alert('公司名请输入');
    document.getElementById('contact_email').focus();
    return false;
  }
}

</script>

		<form action="/contacts" method="post" onsubmit="return check();">
