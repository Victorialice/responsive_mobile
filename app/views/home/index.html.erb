			<label>用户名 <input type="text" id="email" name="email" value="<%= params[:email] %>" /></label>
			<label>密　码 <input type="password" id="password" name="password" value="<%= params[:password] %>" /></label>
			<ul class="m_top15">
      	<li><input name="" type="" value="登录" class="sidebar_ld" /></li>
				<li><a href="#" class="sidebar_ld">注册</a></li>
				<li><a href="#">忘记密码</a></li>
			</ul>
		</dd>
		<% end %>
		
		<% else %>
		<dd>
			<p class="sidebar_p recorder_f18"><%= session[:user_name] %>，HIOKI欢迎您</p>
